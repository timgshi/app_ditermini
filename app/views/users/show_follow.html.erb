<% provide(:title, @title) %>
<div data-role='content'>
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Photos:</b> <%= @user.photos.count %></span>
    </section>
    <section>
      <%= render 'shared/follow_stats' %>
      <% if @users.any? %>
        <br/>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
<div data-role="content">
    <h3><%= @title %></h3>
    <% if @users.any? %>
       <ul class="users" data-role='listview' data-inset='true'>
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
</div>
</div>